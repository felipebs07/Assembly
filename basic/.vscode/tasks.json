{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Assembly",
            "type": "shell",
            "command": "nasm",
            "args": [
                "-f", "win64",  // Note a mudança para win64
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.obj"  // Extensão .obj no Windows
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Link",
            "type": "shell",
            "command": "link",  // Usando o linker do Windows
            "args": [
                "${fileDirname}\\${fileBasenameNoExtension}.obj",
                "/subsystem:console",
                "/entry:main",
                "/out:${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "dependsOn": ["Build Assembly"]
        }
    ]
}